{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Origins": [ "*" ],
  "Certificate": {
    "UseSelfSignedCertificate": true,
    "CertificatePath": "/data/certificate.pfx"
  },
  "HomeAssistant": {
    "ServerUrl": "http://supervisor",
    "ConnectionLifeTime": "00:15:00",
    "SupervisorToken": ""
  },
  "Devices": {
    "FactoryLibraryDirectory": "/data/DeviceFactoryLibraries"
  },
  "BackgroundServices": {
    "MaxConsecutiveExceptions": 10,
    "LoopExceptionSleep": 10000,
    "LoopIterationSleep": 5000
  }
}
